#!/bin/bash

docker-compose exec node1 cat wallet.dat > wallet1.dat
echo "Synced node1's wallet:"
./client.py balance

docker-compose exec node2 cat wallet.dat > wallet2.dat
echo "Synced node2's wallet:"
./client.py balance --wallet wallet2.dat

docker-compose exec node3 cat wallet.dat > wallet3.dat
echo "Synced node3's wallet:"
./client.py balance --wallet wallet3.dat

docker-compose exec node4 cat wallet.dat > wallet4.dat
echo "Synced node4's wallet:"
./client.py balance --wallet wallet4.dat

docker-compose exec node5 cat wallet.dat > wallet5.dat
echo "Synced node5's wallet:"
./client.py balance --wallet wallet5.dat

docker-compose exec node6 cat wallet.dat > wallet6.dat
echo "Synced node6's wallet:"
./client.py balance --wallet wallet6.dat

docker-compose exec node7 cat wallet.dat > wallet7.dat
echo "Synced node7's wallet:"
./client.py balance --wallet wallet7.dat

docker-compose exec node8 cat wallet.dat > wallet8.dat
echo "Synced node8's wallet:"
./client.py balance --wallet wallet8.dat


